{
  "compilerOptions": {
    "noEmit": true,
    "noEmitOnError": true,
    "strict": true,
    "module": "esnext",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true
  },
  "include": ["src/**/*"]
}
