{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/index.d.ts",
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2020",
    "types": ["cypress"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.spec.{ts,tsx}"]
}
